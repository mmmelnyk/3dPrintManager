    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this"
    x:Class="_3dPrintManager.Views.PrinterView">
    <Border
        BackgroundColor="{Binding CardColor, Source={x:Reference this}}"
        Stroke="{Binding BorderColor, Source={x:Reference this}}"
        StrokeThickness="2"
        Padding="10">
